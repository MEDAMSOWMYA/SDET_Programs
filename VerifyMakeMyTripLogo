package comprehensiveassignment;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.chrome.ChromeDriver;

public class VerifyMakeMyTripLogo {

	public static void main(String[] args) {
	
	WebDriver driver= new ChromeDriver();
	driver.get("https://www.makemytrip.com/");
	driver.manage().window().maximize();
	
	boolean logoIsVisible=driver.findElement(By.xpath("//*[@id=\"header-container\"]/div[1]/a/img")).isDisplayed();
	System.out.println("Logo is visible:"+logoIsVisible);
	driver.quit();
	
	}

}
